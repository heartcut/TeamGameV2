
@using TeamGameV2.DatabaseConnection 

<h3 style="color:black">Lobby @lobby</h3>
@if (@DBVars.PlayersInLobby < 4)
{
    <div style="color:lawngreen;font-size:x-large">@DBVars.PlayersInLobby / 4</div>

}
else
{
    <div style="color:red;font-size:x-large">@DBVars.PlayersInLobby / 4</div>
    <div style="color:red;font-size:x-large">Full</div>

}


@code {

    [Parameter]
    public int lobby { get; set; }

    DatabaseModel DBVars;

    protected override async Task OnInitializedAsync()
    {

        DBVars = ReadDB.GetVars(lobby);

    }
    


}
